<Window x:Class="TextPassword.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextPassword"
        mc:Ignorable="d"
        Title="用户登录界面" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label Content="账号" HorizontalAlignment="Left" Margin="269,135,0,0" VerticalAlignment="Top"/>
        <Label Content="密码" HorizontalAlignment="Left" Margin="269,185,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAccount" HorizontalAlignment="Left" Margin="329,139,0,0" TextWrapping="Wrap" Text="请输入用户名" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left"  Margin="329,189,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="登录" HorizontalAlignment="Left" Margin="300,245,0,0" VerticalAlignment="Top" Click="Login_Click"/>
        <Button Content="关闭" HorizontalAlignment="Left" Margin="389,245,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.455,-0.451" Click="Close_Click"/>

    </Grid>
</Window>
